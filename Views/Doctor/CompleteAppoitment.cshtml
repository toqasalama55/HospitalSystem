<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Appointment</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container mt-5">
        <form action="" method="get" id="appointmentForm" class="form-container">
            <h1>Complete Appointment with @Model.Name</h1>
            <div class="form-group">
                <label for="name">Patient Name</label>
                <input type="text" class="form-control" id="name" required aria-describedby="Name">
            </div>
            <div class="form-group">
                <label for="AppointmentDate">Appointment Date</label>
                <input type="date" class="form-control" id="AppointmentDate" required aria-describedby="AppointmentDate">
            </div>
            <div class="form-group">
                <label for="AppointmentTime">Appointment Time</label>
                <input type="time" class="form-control" id="AppointmentTime" required aria-describedby="AppointmentTime">
            </div>
            <button type="submit" class="btn btn-primary">Complete Appointment</button>
        </form>
    </div>

    <!-- The Modal -->
    <div class="modal fade" id="appointmentModal" tabindex="-1" role="dialog" aria-labelledby="appointmentModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="appointmentModalLabel">Appointment Completed</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                       </button>
                </div>
                <div class="modal-body">
                    Your appointment has been successfully completed. Thank you!
                </div>
                @*  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div> *@
            </div>
        </div>
    </div>

    <script>
        document.getElementById('appointmentForm').addEventListener('submit', function (event) {
            event.preventDefault(); // Prevent the form from submitting the traditional way
            const name = document.getElementById('name').value;
            const date = document.getElementById('AppointmentDate').value;
            const time = document.getElementById('AppointmentTime').value;

            if (name && date && time) {
                // Show the modal
                $('#appointmentModal').modal('show');
            }
        });
    </script>
</body>
</html>
